		"noEmit": false,
		"paths": {
			"~/*": ["src/*"]
		},
		"target": "esnext",
		"emitDeclarationOnly": true
	},
	"extends": "astro/tsconfigs/strict",
	"include": [".astro/types.d.ts", "*.config.*", "src"],
	"references": [
		{ "path": "../comparisons" },
		{ "path": "../browser" },
		{ "path": "../plugin-flint" },
		{ "path": "../node" },
		{ "path": "../performance" },
		{ "path": "../spelling" }
	]
}
